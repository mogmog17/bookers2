<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
       <label for="user_name">Name</label><br>
       <%= f.text_field :title, class: "form-control name" %><br>
       <label for="user_image">Image</label><br>
       <%= f.file_field :image, accept: "image/*" %><br>
       <label for="user_introdaction">Introduction</label><br>
       <%= f.text_area :body, class: "form-control introduction" %><br>
       <%= f.submit 'Update User', class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>
